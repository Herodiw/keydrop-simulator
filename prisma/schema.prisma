datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String  @id @unique
  username     String  @unique
  passwordHash String
  inventory    Item[]
  balance      Float   @default(50)
  goldBalance  Int     @default(0)
  sandboxMode  Boolean @default(false)
}

model Item {
  owner         User     @relation(fields: [ownerId], references: [id])
  ownerId       String
  dropId        String   @id @unique
  skinName      String
  skinPrice     Float
  skinWeapon    String
  skinImgSource String
  skinRarity    String
  skinQuality   String
  origin        String
  dropDate      DateTime @default(now())
  sold          Boolean  @default(false)
  upgraded      Boolean  @default(false)
}

model Session {
  id     String @id @unique
  userId String
}

model Case {
  urlName     String @id @unique
  websiteName String @unique
  price       Float
  expired     Boolean
  drops       Json[]
}